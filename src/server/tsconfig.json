{
    "compilerOptions": {
        "target": "ES2022", // Modern enough for recent Node.js versions
        "module": "CommonJS", // Common module system for Node.js
        "moduleResolution": "node", // Standard Node.js module resolution
        "lib": ["ES2022"], // Target the ES2022 library
        "skipLibCheck": true, // Skip type checking of declaration files for faster builds
        "noEmit": true, // Do not emit output files (used with bundlers like esbuild)
        "strict": true, // Enable all strict type-checking options
        "noUnusedLocals": true, // Report errors on unused local variables
        "noUnusedParameters": true, // Report errors on unused function parameters
        "noFallthroughCasesInSwitch": true, // Report errors on fallthrough cases in switch statements
		"pretty": true,
		"esModuleInterop":true,
    },
    "include": ["../../src/server/**/*"], // Include server-side TypeScript files
    "exclude": ["../../node_modules"] // Exclude node_modules folder
}
